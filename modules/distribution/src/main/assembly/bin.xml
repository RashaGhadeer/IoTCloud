<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>bin</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>./src/release/bin</directory>
            <outputDirectory>iotcloud-${pom.version}/bin</outputDirectory>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>./src/release/samples/bin</directory>
            <outputDirectory>iotcloud-${pom.version}/samples/bin</outputDirectory>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>../../repository</directory>
            <outputDirectory>iotcloud-${pom.version}/repository</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>./src/release/.empty</source>
            <outputDirectory>iotcloud-${pom.version}/work/temp</outputDirectory>
        </file>
        <file>
            <source>./src/release/log4j.properties</source>
            <outputDirectory>iotcloud-${pom.version}/lib</outputDirectory>
        </file>
        <file>
            <source>./src/release/.empty</source>
            <outputDirectory>iotcloud-${pom.version}/webapps/axis2/WEB-INF/services</outputDirectory>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>iotcloud-${pom.version}/lib</outputDirectory>
            <excludes>
                <exclude>org.apache.axis2:axis2-webapp:war</exclude>
                <exclude>iotcloud:iotcloud-services:aar</exclude>
                <exclude>org.apache.axis2:addressing:mar</exclude>
                <exclude>ros.rosjava_core:rosjava:jar</exclude>
                <exclude>ros.rosjava_core:rosjava_messages:jar</exclude>
                <exclude>ros.rosjava_core:rosjava_bootstrap:jar</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>iotcloud-${pom.version}/samples/lib</outputDirectory>
            <includes>
                <include>iotcloud:iotcloud-samples-general:jar</include>
                <include>iotcloud:iotcloud-samples-common:jar</include>
                <include>iotcloud:iotcloud-samples-turtlebot:jar</include>
                <include>iotcloud:iotcloud-samples-arducopter:jar</include>
                <include>ros.rosjava_core:rosjava:jar</include>
                <include>ros.rosjava_core:rosjava_messages:jar</include>
                <include>ros.rosjava_core:rosjava_bootstrap:jar</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>iotcloud-${pom.version}/repository/axis2/services</outputDirectory>
            <includes>
                <include>iotcloud:iotcloud-services:aar</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>iotcloud-${pom.version}/repository/axis2/modules</outputDirectory>
            <includes>
                <include>org.apache.axis2:addressing:mar</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
